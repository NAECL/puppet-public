<IfModule mod_ssl.c>
<VirtualHost *:443>
  ServerName <%= scope['base::params::servername'] %>.<%= scope['base::params::domain'] %>
  DocumentRoot "/var/www/rainloop/"
  ServerAdmin admin@<%= scope['base::params::domain'] %>

  ErrorLog "/var/log/apache2/rainloop_error_log"
  TransferLog "/var/log/apache2/rainloop_access_log"

  <Directory />
    Options +Indexes +FollowSymLinks +ExecCGI
    AllowOverride All
    Order deny,allow
    Allow from all
    Require all granted
  </Directory>

  SSLCertificateFile /etc/letsencrypt/live/<%= scope['base::params::servername'] %>.<%= scope['base::params::domain'] %>/fullchain.pem
  SSLCertificateKeyFile /etc/letsencrypt/live/<%= scope['base::params::servername'] %>.<%= scope['base::params::domain'] %>/privkey.pem
  Include /etc/letsencrypt/options-ssl-apache.conf
</VirtualHost>
</IfModule>
